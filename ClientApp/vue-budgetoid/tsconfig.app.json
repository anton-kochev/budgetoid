{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "isolatedModules": true,
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@/*": [
        "./src/*",
      ]
    }
  }
}