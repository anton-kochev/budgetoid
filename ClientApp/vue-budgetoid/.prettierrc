{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": [
        "*.js"
      ],
      "options": {
        "trailingComma": "es5"
      }
    }
  ],
  "prettier/prettier": [
    "error",
    {
      "singleQuote": false,
      "parser": "flow"
    }
  ]
}